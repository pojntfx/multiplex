<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <object class="AdwAlertDialog" id="error-dialog">
    <property name="heading" translatable="yes">A Fatal Error Occured</property>
    <property name="default-response">save</property>
    <property name="close-response">report</property>

    <responses>
      <response id="report" translatable="yes">Report Error</response>
      <response id="close" appearance="destructive" translatable="yes">Close Multiplex</response>
    </responses>
  </object>
</interface>